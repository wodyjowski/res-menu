@page
@model res_menu.Pages.ErrorModel
@{
    ViewData["Title"] = "Error";
    Layout = "_Layout";
}

<div class="container text-center mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="@(Model.IsDbError ? "alert alert-warning" : "alert alert-danger") shadow-sm">
                @if (Model.IsDbError)
                {
                    <h2 class="h4"><i class="bi bi-database-x me-2"></i>Database Connection Error</h2>
                    <p class="mb-3">We're currently experiencing issues connecting to our database.</p>
                    <div class="text-start small">
                        <p class="mb-2">Possible reasons:</p>
                        <ul class="text-start">
                            <li>The database server might be temporarily unavailable</li>
                            <li>Network connectivity issues</li>
                            <li>Database configuration needs to be updated</li>
                        </ul>
                    </div>
                    <p class="mb-0">Our team has been notified. Please try again later.</p>
                }
                else
                {
                    <h2 class="h4"><i class="bi bi-exclamation-triangle me-2"></i>Error</h2>
                    <p class="mb-3">An error occurred while processing your request.</p>
                    @if (Model.ShowRequestId)
                    {
                        <p class="small text-muted mb-0">
                            <strong>Request ID:</strong> <code>@Model.RequestId</code>
                        </p>
                    }
                }
            </div>
            
            <div class="mt-4">
                <a href="/" class="btn btn-primary">
                    <i class="bi bi-house me-2"></i>Return Home
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}